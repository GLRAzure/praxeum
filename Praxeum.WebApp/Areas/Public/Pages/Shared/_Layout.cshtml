<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cloud Skills Challenges</title>
    <link rel="icon"
          type="image/png"
          href="~/images/azure-logo-small.png">

    <environment include="Development">
        <link rel="stylesheet" href="~/vendor/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/site-public.css" />
        <script src="~/vendor/@@fortawesome/fontawesome-free/js/all.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
              crossorigin="anonymous">
        <link rel="stylesheet"
              href="~/css/site.min.css"
              asp-append-version="true" />
        <link rel="stylesheet"
              href="~/css/site-public.min.css"
              asp-append-version="true" />
        <script defer
                src="https://use.fontawesome.com/releases/v5.7.2/js/all.js"
                integrity="sha384-0pzryjIRos8mFBWMzSSZApWtPl/5++eIfzYmTgBBmXYdhvxPc+XcFEk+zJwDgWbP"
                crossorigin="anonymous">
        </script>
    </environment>
</head>

@{
    var pageId = ViewContext.RouteData.Values["page"].ToString();
    pageId = pageId.Replace("/", "-");
    pageId = pageId.ToLower();
    pageId = "page" + pageId;
}

<body class="page @pageId">

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <p>If you have any questions or feedback please hit us up at <a href="mailto:matt.ruma@microsoft.com">matt.ruma@@microsoft.com</a>, <a href="mailto:bdykstra@microsoft.com">bdykstra@@microsoft.com</a> or <a href="mailto:alex.lowe@microsoft.com">alex.lowe@@microsoft.com</a>.
        </div>
    </footer>

    <environment include="Development">
        <script src="~/vendor/jquery/dist/jquery.js"></script>
        <script src="~/vendor/popper.js/dist/popper.js"></script>
        <script src="~/vendor/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
                integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
                integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
                crossorigin="anonymous"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
