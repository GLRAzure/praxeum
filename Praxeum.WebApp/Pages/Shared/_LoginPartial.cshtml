@using Microsoft.Extensions.Options

@if (User.Identity.IsAuthenticated)
{
    <div class="navbar-nav">
        <span class="navbar-text">Hello @User.Identity.Name!</span>
        <a class="nav-item nav-link" asp-controller="Account" asp-action="SignOut">Sign out</a>
    </div>
}
else
{
    <div class="navbar-nav">
        <a class="nav-item nav-link" asp-controller="Account" asp-action="SignIn">Sign in</a>
    </div>
}