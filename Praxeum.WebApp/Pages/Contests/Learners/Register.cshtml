@page "/Contests/{contestId:Guid}/Learners/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register Learner";
}

<h1>Register Learner</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Contest.Name"></label>
        <p class="form-control-static">@Model.Contest.Name</p>
    </div>
    <div class="form-group">
        <label asp-for="Learner.UserName"></label>
        <input asp-for="Learner.UserName" class="form-control" />
        <span asp-validation-for="Learner.UserName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i><span>Add</span></button>
    <a class="btn btn-link" asp-page="Index">Cancel</a>
</form>