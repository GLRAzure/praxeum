@page "/Contests/{contestId:Guid}/Learners/Add"
@model CreateModel
@{
    ViewData["Title"] = "Add Learner(s)";
}

<h1>Add Learner(s)</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Learner.ContestId"></label>
        <select asp-for="Learner.ContestId" asp-items="Model.AvailableContests" class="form-control">
            <option></option>
        </select>
        <span asp-validation-for="Learner.ContestId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Learner.UserNames"></label>
        <textarea asp-for="Learner.UserNames" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Learner.UserNames" class="text-danger"></span>
        <small class="form-text">Enter multiple Microsoft Learn user names separated by a line break, comma or semicolon.</small>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i><span>Add</span></button>
    <a class="btn btn-link" asp-page="Index">Cancel</a>
</form>