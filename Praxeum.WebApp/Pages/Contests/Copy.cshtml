@page "{id:Guid}"
@model CopyModel
@{
    ViewData["Title"] = "Copy Contest";
}

<h1>Copy Contest</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Contest.Name"></label>
        <input asp-for="Contest.Name" class="form-control" />
        <span asp-validation-for="Contest.Name" class="text-danger"></span>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.Contest.Description))
    {
        <div class="form-group">
            <label asp-for="Contest.Description"></label>
            <p class="form-control-static">@Model.Contest.Description</p>
        </div>
    }
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i><span>Copy</span></button>
    <a class="btn btn-link" asp-page="./Details">Cancel</a>
</form>