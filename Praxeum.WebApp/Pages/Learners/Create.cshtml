@page
@model CreateModel
@{
    ViewData["Title"] = "Create Learner";
}

<h1>Create Learner</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Learner.Name"></label>
        <input asp-for="Learner.Name" class="form-control" />
        <span asp-validation-for="Learner.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i><span>Create</span></button>
    <a class="btn btn-link" asp-page="Index">Cancel</a>
</form>