@page
@model CreateModel
@{
    ViewData["Title"] = "Create Learner";
}

<h1>Create Learner</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Learner.LeaderBoardId"></label>
        <select asp-for="Learner.LeaderBoardId" asp-items="Model.AvailableLeaderBoards" class="form-control">
            <option></option>
        </select>
        <span asp-validation-for="Learner.LeaderBoardId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Learner.Names"></label>
        <textarea asp-for="Learner.Names" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Learner.Names" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i><span>Create</span></button>
    <a class="btn btn-link" asp-page="Index">Cancel</a>
</form>