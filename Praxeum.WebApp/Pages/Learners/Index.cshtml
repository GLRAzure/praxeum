@page
@model IndexModel
@{
    ViewData["Title"] = "Learners";
}

<h1>Learners</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th class="text-center">Level</th>
            <th class="text-center">Points</th>
            <th></th>
            <th class="text-center d-none d-md-table-cell"><i class="fas fa-calendar-alt"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var learner in Model.Learners.Where(x => x.Status != "failed"))
        {
            <tr>
                <td>@learner.DisplayName<small class="text-muted ml-2">@learner.UserName</small></td>
                <td class="text-center">@learner.ProgressStatus.CurrentLevel</td>
                <td class="text-center">@learner.ProgressStatus.CurrentLevelPointsEarned/@learner.ProgressStatus.TotalPoints</td>
                <td><a href="https://techprofile.microsoft.com/@learner.UserName" class="d-none d-lg-inline">https://techprofile.microsoft.com/@learner.UserName</a><a href="https://techprofile.microsoft.com/@learner.UserName" target="_blank"><i class="fas fa-external-link-alt"></i></a></td>
                <td class="text-center d-none d-md-table-cell"><time datetime="@learner.LastModifiedOn" title="@learner.LastModifiedOn">@learner.LastModifiedOnHumanized</time></td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus"></i><span>Add Learner</span></a>
