@page "/Teams/{id:Guid}/Delete"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Team";
}

<h1>Delete Team</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Team.Name"></label>
        <p class="form-control-static">@Model.Team.Name</p>
    </div>
    <div class="form-check">
        @if (Model.Team.IsActive)
        {
            <i class="far fa-check-square"></i>
        }
        else
        {
            <i class="far fa-square"></i>
        }
        <label asp-for="Team.IsActive" class="form-check-label"></label>
    </div>
    <input type="hidden" asp-for="Team.Id" />
    <input type="hidden" asp-for="Team.Name" />
    <input type="hidden" asp-for="Team.IsActive" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-page="Details">Cancel</a>
</form>