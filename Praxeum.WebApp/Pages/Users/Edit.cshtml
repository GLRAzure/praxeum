@page "{id:Guid}"
@model EditModel
@{
    ViewData["Title"] = "Edit User";
}

    <h1>Edit User</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserProfile.Name"></label>
        <input asp-for="UserProfile.Name" class="form-control" />
        <span asp-validation-for="UserProfile.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserProfile.Roles"></label>
        <input asp-for="UserProfile.Roles" class="form-control" />
        <span asp-validation-for="UserProfile.Roles" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i><span>Save Changes</span></button>
    <a class="btn btn-link" asp-page="Index">Cancel</a>
</form>