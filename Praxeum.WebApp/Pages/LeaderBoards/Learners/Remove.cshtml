@page "/LeaderBoards/{leaderBoardId:Guid}/Learners/{learnerId:Guid}/Remove"
@model RemoveModel
@{
    ViewData["Title"] = "Remove Learner";
}

<h1>Remove Learner</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <p>Are you sure you want to remove <strong>@Model.Learner.LearnerName</strong>?</p>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fal fa-trash"></i><span>Delete</span></button>
    <a asp-page="/LeaderBoards/Details" asp-route-id="@Model.Learner.LeaderBoardId" class="btn btn-link">Cancel</a>
</form>