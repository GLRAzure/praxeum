@page "/LeaderBoards/{leaderBoardId:Guid}/Learners/Add"
@model AddModel
@{
    ViewData["Title"] = "Add Learner(s)";
}

<h1>Add Learner(s)</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Learner.LeaderBoardId"></label>
        <select asp-for="Learner.LeaderBoardId" asp-items="Model.AvailableLeaderBoards" class="form-control"></select>
        <span asp-validation-for="Learner.LeaderBoardId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Learner.Names"></label>
        <textarea asp-for="Learner.Names" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Learner.Names" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i><span>Add</span></button>
    <a asp-page="/LeaderBoards/Details" asp-route-id="@Model.Learner.LeaderBoardId" class="btn btn-link">Cancel</a>
</form>