@page "/LeaderBoards/{leaderBoardId:Guid}/Learners/Add"
@model AddModel
@{
    ViewData["Title"] = "Add Learner";
}

<h1>Add Learner</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Learner.LearnerId"></label>
        <select asp-for="Learner.LearnerId" asp-items="Model.AvailableLearners" class="form-control"></select>
        <span asp-validation-for="Learner.LearnerId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i><span>Add</span></button>
    <a asp-page="/LeaderBoards/Details" asp-route-id="@Model.Learner.LeaderBoardId" class="btn btn-link">Cancel</a>
</form>