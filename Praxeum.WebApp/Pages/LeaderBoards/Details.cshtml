@page "/LeaderBoards/{id:Guid}"
@model DetailsModel

@{
    ViewData["Title"] = "Leader Board";
}

<h1>Leader Board</h1>

<form>
    <div class="form-group">
        <label asp-for="LeaderBoard.Name"></label>
        <p class="form-control-static">@Model.LeaderBoard.Name</p>
    </div>
    <div class="form-group">
        <label asp-for="LeaderBoard.Description"></label>
        <p class="form-control-static">@Model.LeaderBoard.Description</p>
    </div>
</form>

<h2>Learners</h2>

@if (Model.LeaderBoard.Learners == null || Model.LeaderBoard.Learners.Count == 0)
{
    <p>No learners have been added to this leader board. Would you like to <a>add a learner</a>?</p>
}
<a asp-page="Edit" class="btn btn-primary"><i class="fal fa-pencil"></i><span>Edit</span></a>
<a asp-page="Delete" class="btn btn-link">Delete</a>
<a asp-page="Index" class="btn btn-link">Cancel</a>
