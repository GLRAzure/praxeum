@page "{id:Guid}"
@model EditModel
@{
    ViewData["Title"] = "Edit Leader Board";
}

<h1>Edit Leader Board</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="LeaderBoard.Name"></label>
        <input asp-for="LeaderBoard.Name" class="form-control" />
        <span asp-validation-for="LeaderBoard.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeaderBoard.Description"></label>
        <input asp-for="LeaderBoard.Description" class="form-control" />
        <span asp-validation-for="LeaderBoard.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i><span>Save Changes</span></button>
    <a class="btn btn-link" asp-page="./Details">Cancel</a>
</form>